# Trading Configuration
# Copy this file to .env and update with your values

# Data Configuration
DATA_START_DATE=2018-01-01
DATA_END_DATE=2024-12-31

# Risk Management
INITIAL_CAPITAL=100000
MAX_POSITION_SIZE=0.10  # Maximum 10% of capital per position
VOLATILITY_TARGET=0.20  # 20% annualized volatility target
RISK_FREE_RATE=0.03  # 3% risk-free rate

# Strategy Parameters
MA_FAST=16  # Fast moving average period (Carver uses 16, 32, 64)
MA_SLOW=64  # Slow moving average period

# Backtesting
TRANSACTION_COST=0.001  # 0.1% per trade (adjust for SGX)
SLIPPAGE=0.0005  # 0.05% slippage

# Logging
LOG_LEVEL=INFO

# SGX Stocks (comma-separated)
SGX_STOCKS=DBS.SI,O39.SI,ES3.SI,D05.SI,C6L.SI
